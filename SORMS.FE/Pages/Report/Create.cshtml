@page
@model SORMS.FE.Pages.Report.CreateModel
@{
    ViewData["Title"] = "Tạo Báo cáo Mới";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style>
    .create-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 2rem;
        border-radius: 12px;
        margin-bottom: 2rem;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
    }
    .create-header h1 {
        color: white;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }
    .create-header p {
        color: rgba(255, 255, 255, 0.9);
        margin-bottom: 0;
    }
    .form-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.07);
        overflow: hidden;
    }
    .form-card .card-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 1.5rem;
        border: none;
    }
    .form-label {
        font-weight: 600;
        color: #1e293b;
        margin-bottom: 0.5rem;
    }
    .form-control {
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        padding: 0.75rem 1rem;
        transition: all 0.3s ease;
    }
    .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }
    .btn-gradient {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 0.75rem 2rem;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    .btn-gradient:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
        color: white;
    }
</style>

<div class="create-header">
    <h1>
        <i class="fas fa-file-medical me-2"></i>
        Tạo Báo Cáo Mới
    </h1>
    <p>Tạo báo cáo công việc mới của bạn</p>
</div>

<div class="form-card">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-edit me-2"></i>
            Thông tin báo cáo
        </h5>
    </div>
    <div class="card-body" style="padding: 2rem;">
        <form method="post">
            @Html.AntiForgeryToken()
            <div class="mb-4">
                <label for="Title" class="form-label">
                    <i class="fas fa-heading me-1" style="color: #667eea;"></i>
                    Tiêu đề báo cáo
                </label>
                <input type="text" class="form-control" id="Title" asp-for="Report.Title" placeholder="Nhập tiêu đề báo cáo..." required>
                <span asp-validation-for="Report.Title" class="text-danger"></span>
            </div>
            
            <div class="mb-4">
                <label for="Content" class="form-label">
                    <i class="fas fa-align-left me-1" style="color: #667eea;"></i>
                    Nội dung báo cáo
                </label>
                <textarea class="form-control" id="Content" asp-for="Report.Content" rows="12" placeholder="Nhập nội dung báo cáo chi tiết..." required></textarea>
                <span asp-validation-for="Report.Content" class="text-danger"></span>
            </div>
            
            <div class="d-flex gap-2 justify-content-end">
                <a href="/Report/Index" class="btn btn-outline-secondary" style="padding: 0.75rem 2rem; border-radius: 8px;">
                    <i class="fas fa-times me-2"></i>
                    Hủy bỏ
                </a>
                <button type="submit" class="btn btn-gradient">
                    <i class="fas fa-paper-plane me-2"></i>
                    Tạo báo cáo
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}