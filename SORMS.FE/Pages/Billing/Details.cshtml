@{
    ViewData["Title"] = "Chi tiết hóa đơn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-4">Chi tiết hóa đơn</h2>

<div class="card shadow-sm p-4 mx-auto" style="max-width: 600px;">
    <dl class="row">
        <dt class="col-sm-4">Mã hóa đơn:</dt>
        <dd class="col-sm-8">@Model.Id</dd>

        <dt class="col-sm-4">Tên cư dân:</dt>
        <dd class="col-sm-8">@Model.ResidentName</dd>

        <dt class="col-sm-4">Số tiền:</dt>
        <dd class="col-sm-8">@Model.Amount.ToString("C")</dd>

        <dt class="col-sm-4">Trạng thái:</dt>
        <dd class="col-sm-8">
            @if (Model.IsPaid)
            {
                <span class="badge bg-success">Đã thanh toán</span>
            }
            else
            {
                <span class="badge bg-warning text-dark">Chưa thanh toán</span>
            }
        </dd>

        <dt class="col-sm-4">Ngày tạo:</dt>
        <dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy")</dd>
    </dl>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary px-4">Quay lại</a>
        @if (!Model.IsPaid)
        {
            <form asp-action="MarkAsPaid" asp-route-id="@Model.Id" method="post" class="d-inline">
                <button type="submit" class="btn btn-success px-4">Đánh dấu đã thanh toán</button>
            </form>
        }
    </div>
</div>
