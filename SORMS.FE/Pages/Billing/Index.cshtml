@{
    ViewData["Title"] = "Danh sách hóa đơn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-4">Danh sách hóa đơn</h2>

<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-primary">Thêm hóa đơn mới</a>
</div>

<table class="table table-bordered table-striped text-center align-middle">
    <thead class="table-dark">
        <tr>
            <th>Mã hóa đơn</th>
            <th>Tên cư dân</th>
            <th>Số tiền</th>
            <th>Trạng thái</th>
            <th>Ngày tạo</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var bill in Model)
            {
                <tr>
                    <td>@bill.Id</td>
                    <td>@bill.ResidentName</td>
                    <td>@bill.Amount.ToString("C")</td>
                    <td>
                        @if (bill.IsPaid)
                        {
                            <span class="badge bg-success">Đã thanh toán</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Chưa thanh toán</span>
                        }
                    </td>
                    <td>@bill.CreatedAt.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@bill.Id" class="btn btn-info btn-sm">Chi tiết</a>
                        @if (!bill.IsPaid)
                        {
                            <form asp-action="MarkAsPaid" asp-route-id="@bill.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-success btn-sm">Đánh dấu đã thanh toán</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-muted text-center">Không có hóa đơn nào.</td>
            </tr>
        }
    </tbody>
</table>
