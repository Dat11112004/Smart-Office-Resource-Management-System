@model IEnumerable<SORMS.API.DTOs.BillingDto>
@{
    ViewData["Title"] = "Báo cáo hóa đơn";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var total = Model?.Sum(x => x.Amount) ?? 0;
    var paid = Model?.Where(x => x.IsPaid).Sum(x => x.Amount) ?? 0;
    var unpaid = total - paid;
}

<h2 class="text-center mb-4">Báo cáo hóa đơn</h2>

<div class="row text-center mb-4">
    <div class="col-md-4">
        <div class="card p-3 shadow-sm bg-success text-white">
            <h5>Tổng tiền đã thanh toán</h5>
            <h3>@paid.ToString("C")</h3>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card p-3 shadow-sm bg-warning text-dark">
            <h5>Tổng tiền chưa thanh toán</h5>
            <h3>@unpaid.ToString("C")</h3>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card p-3 shadow-sm bg-primary text-white">
            <h5>Tổng cộng</h5>
            <h3>@total.ToString("C")</h3>
        </div>
    </div>
</div>

<table class="table table-striped text-center align-middle">
    <thead class="table-dark">
        <tr>
            <th>Mã</th>
            <th>Tên cư dân</th>
            <th>Số tiền</th>
            <th>Trạng thái</th>
            <th>Ngày tạo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bill in Model)
        {
            <tr>
                <td>@bill.Id</td>
                <td>@bill.ResidentName</td>
                <td>@bill.Amount.ToString("C")</td>
                <td>@(bill.IsPaid ? "Đã thanh toán" : "Chưa thanh toán")</td>
                <td>@bill.CreatedAt.ToString("dd/MM/yyyy")</td>
            </tr>
        }
    </tbody>
</table>
