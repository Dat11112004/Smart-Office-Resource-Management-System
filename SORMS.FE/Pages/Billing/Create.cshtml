@{
    ViewData["Title"] = "Tạo hóa đơn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-4">Tạo hóa đơn mới</h2>

<div class="card shadow-sm p-4 mx-auto" style="max-width: 600px;">
    @using (Html.BeginForm("Create", "Billing", FormMethod.Post))
    {
        <div class="form-group mb-3">
            <label for="ResidentName">Tên cư dân</label>
            @Html.TextBoxFor(m => m.ResidentName, new { @class = "form-control", placeholder = "Nhập tên cư dân" })
        </div>

        <div class="form-group mb-3">
            <label for="Amount">Số tiền</label>
            @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", type = "number", step = "0.01", placeholder = "Nhập số tiền" })
        </div>

        <div class="text-center mt-3">
            <button type="submit" class="btn btn-success px-4">Tạo mới</button>
            <a asp-action="Index" class="btn btn-secondary px-4">Quay lại</a>
        </div>
    }
</div>
