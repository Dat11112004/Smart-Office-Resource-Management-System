@page
@model SORMS.FE.Pages.ManagerAccount.VerifyOtpModel
@{
    ViewData["Title"] = "Xác Minh OTP";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SORMS</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        * {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .verify-otp-container {
            max-width: 450px;
            width: 100%;
        }

        .verify-otp-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            overflow: hidden;
        }

        .card-header-custom {
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            color: white;
            padding: 2rem;
            text-align: center;
        }

        .card-header-custom h3 {
            margin: 0;
            font-size: 1.75rem;
            font-weight: 700;
        }

        .card-header-custom p {
            margin: 0.5rem 0 0 0;
            font-size: 0.95rem;
            opacity: 0.9;
        }

        .card-header-custom .icon-circle {
            width: 80px;
            height: 80px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
        }

        .card-header-custom .icon-circle i {
            font-size: 2.5rem;
        }

        .card-body-custom {
            padding: 2.5rem 2rem;
        }

        .email-display {
            background: #e8f4f8;
            border-left: 4px solid #11998e;
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
        }

        .email-display i {
            color: #11998e;
            margin-right: 0.5rem;
        }

        .email-display strong {
            color: #2c3e50;
            word-break: break-all;
        }

        .form-label {
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }

        .form-control {
            border: 2px solid #e9ecef;
            border-radius: 10px;
            padding: 0.75rem 1rem;
            font-size: 1.25rem;
            letter-spacing: 0.25rem;
            text-align: center;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: #11998e;
            box-shadow: 0 0 0 0.2rem rgba(17, 153, 142, 0.25);
        }

        .btn-submit {
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            color: white;
            border: none;
            border-radius: 10px;
            padding: 0.875rem 1.5rem;
            font-weight: 600;
            font-size: 1rem;
            width: 100%;
            transition: all 0.3s ease;
            margin-top: 1rem;
        }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(17, 153, 142, 0.4);
        }

        .btn-submit:active {
            transform: translateY(0);
        }

        .back-link {
            text-align: center;
            margin-top: 1.5rem;
        }

        .back-link a {
            color: #11998e;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .back-link a:hover {
            color: #38ef7d;
            text-decoration: underline;
        }

        .alert {
            border-radius: 10px;
            border: none;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }

        .info-text {
            background: #fff3cd;
            border-left: 4px solid #ffc107;
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            font-size: 0.9rem;
            color: #856404;
        }

        .info-text i {
            color: #ffc107;
            margin-right: 0.5rem;
        }
    </style>
</head>
<body>
    <div class="verify-otp-container">
        <div class="verify-otp-card">
            <div class="card-header-custom">
                <div class="icon-circle">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <h3>Xác Minh OTP</h3>
                <p>Nhập mã OTP đã được gửi đến email</p>
            </div>

            <div class="card-body-custom">
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        @Model.ErrorMessage
                    </div>
                }

                <div class="email-display">
                    <i class="fas fa-envelope"></i>
                    <strong>@Model.Email</strong>
                </div>

                <div class="info-text">
                    <i class="fas fa-info-circle"></i>
                    Kiểm tra hộp thư đến hoặc thư mục spam để tìm mã OTP.
                </div>

                <form method="post">
                    <input type="hidden" asp-for="Email" />
                    
                    <div class="mb-3">
                        <label asp-for="Otp" class="form-label">
                            <i class="fas fa-key me-1"></i> Mã OTP
                        </label>
                        <input asp-for="Otp" 
                               type="text" 
                               class="form-control" 
                               placeholder="000000" 
                               maxlength="10"
                               required 
                               autofocus />
                        <span asp-validation-for="Otp" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-submit">
                        <i class="fas fa-check-circle me-2"></i> Xác Minh
                    </button>
                </form>

                <div class="back-link">
                    <i class="fas fa-arrow-left me-1"></i>
                    <a href="/ManagerAccount/ForgotPassword">Gửi lại mã OTP</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
