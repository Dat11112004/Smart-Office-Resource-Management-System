@page "{id:int}"
@model SORMS.FE.Pages.Room.EditModel
@{
    ViewData["Title"] = "Chỉnh sửa phòng";
}

<style>
    .create-room-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 2rem;
    }
    .create-room-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        padding: 2.5rem;
    }
    .form-header {
        margin-bottom: 2rem;
        padding-bottom: 1.5rem;
        border-bottom: 2px solid #f0f0f0;
    }
    .form-header h3 {
        color: #2c3e50;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }
    .form-header p {
        color: #7f8c8d;
        margin: 0;
    }
    .form-section {
        margin-bottom: 2rem;
    }
    .form-section-title {
        font-size: 1rem;
        font-weight: 600;
        color: #34495e;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    .form-section-title i {
        color: #667eea;
    }
    .form-label {
        font-weight: 500;
        color: #34495e;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
    }
    .form-control, .form-select {
        border: 2px solid #e0e6ed;
        border-radius: 10px;
        padding: 0.75rem 1rem;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        color: #2c3e50 !important;
        font-weight: 500;
    }
    .form-control::placeholder {
        color: #95a5a6;
        font-weight: 400;
    }
    .form-control:focus, .form-select:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102,126,234,0.15);
    }
    textarea.form-control {
        resize: vertical;
        min-height: 100px;
    }
    .input-group-text {
        background: #f8f9fa;
        border: 2px solid #e0e6ed;
        border-right: none;
        border-radius: 10px 0 0 10px;
        color: #667eea;
    }
    .input-group .form-control {
        border-left: none;
        border-radius: 0 10px 10px 0;
    }
    .btn-group-custom {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 2px solid #f0f0f0;
    }
    .btn-warning {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        border: none;
        padding: 0.75rem 2rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
        color: white;
    }
    .btn-warning:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(245,87,108,0.4);
        color: white;
    }
    .btn-secondary {
        background: #f8f9fa;
        color: #6c757d;
        border: 2px solid #e0e6ed;
        padding: 0.75rem 2rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    .btn-secondary:hover {
        background: #e9ecef;
        color: #495057;
        border-color: #ced4da;
    }
    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
    }
    @@media (max-width: 768px) {
        .form-row {
            grid-template-columns: 1fr;
        }
        .create-room-card {
            padding: 1.5rem;
        }
    }
    .required-asterisk {
        color: #e74c3c;
    }
</style>

<div class="create-room-container">
    <div class="create-room-card">
        <div class="form-header">
            <h3>
                <i class="fas fa-edit me-2" style="color: #667eea;"></i>
                Chỉnh sửa thông tin phòng
            </h3>
            <p>Cập nhật thông tin chi tiết cho phòng @Model.RoomNumber</p>
        </div>

        <form method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            
            <!-- Thông tin cơ bản -->
            <div class="form-section">
                <div class="form-section-title">
                    <i class="fas fa-info-circle"></i>
                    Thông tin cơ bản
                </div>

                <div class="form-row">
                    <div class="mb-3">
                        <label asp-for="Floor" class="form-label">
                            Tầng <span class="required-asterisk">*</span>
                        </label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-layer-group"></i></span>
                            <input asp-for="Floor" type="number" class="form-control" name="Floor" value="@Model.Floor" placeholder="Ví dụ: 1, 2, 3" min="0" required />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="RoomNumber" class="form-label">
                            Số phòng <span class="required-asterisk">*</span>
                        </label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-hashtag"></i></span>
                            <input asp-for="RoomNumber" class="form-control" name="RoomNumber" value="@Model.RoomNumber" placeholder="Ví dụ: 101, 201, 301" required />
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Type" class="form-label">
                        Loại phòng <span class="required-asterisk">*</span>
                    </label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-tag"></i></span>
                        <input asp-for="Type" class="form-control" name="Type" value="@Model.Type" placeholder="Ví dụ: Đơn, Đôi, VIP, Suite" required />
                    </div>
                </div>
            </div>

            <!-- Chi tiết phòng -->
            <div class="form-section">
                <div class="form-section-title">
                    <i class="fas fa-ruler-combined"></i>
                    Chi tiết phòng
                </div>

                <div class="form-row">
                    <div class="mb-3">
                        <label asp-for="Area" class="form-label">
                            Diện tích (m²) <span class="required-asterisk">*</span>
                        </label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-expand"></i></span>
                            <input asp-for="Area" type="number" step="0.01" class="form-control" name="Area" value="@Model.Area" placeholder="25" min="0" required />
                            <span class="input-group-text">m²</span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MonthlyRent" class="form-label">
                            Giá thuê/tháng <span class="required-asterisk">*</span>
                        </label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-money-bill-wave"></i></span>
                            <input asp-for="MonthlyRent" type="number" class="form-control" name="MonthlyRent" value="@Model.MonthlyRent" placeholder="3500000" min="0" required />
                            <span class="input-group-text">VND</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Trạng thái -->
            <div class="form-section">
                <div class="form-section-title">
                    <i class="fas fa-toggle-on"></i>
                    Trạng thái
                </div>

                <div class="mb-3">
                    <label asp-for="IsAvailable" class="form-label">
                        Tình trạng phòng
                    </label>
                    <select asp-for="IsAvailable" class="form-select" name="IsAvailable">
                        <option value="true">
                            <i class="fas fa-check-circle"></i> Còn trống - Sẵn sàng cho thuê
                        </option>
                        <option value="false">
                            <i class="fas fa-times-circle"></i> Đã thuê - Đang có người ở
                        </option>
                    </select>
                    <small class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        Chọn "Còn trống" nếu phòng chưa có người thuê
                    </small>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">
                        Mô tả phòng
                    </label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-align-left"></i></span>
                        <textarea asp-for="Description" class="form-control" name="Description" rows="4" 
                                  placeholder="Nhập mô tả chi tiết về phòng: nội thất, tiện nghi, ghi chú đặc biệt...">@Model.Description</textarea>
                    </div>
                    <small class="text-muted">
                        <i class="fas fa-lightbulb me-1"></i>
                        Ví dụ: Phòng có điều hòa, tủ lạnh, giường đôi, ban công hướng Nam
                    </small>
                </div>
            </div>

            <!-- Buttons -->
            <div class="btn-group-custom">
                <button type="submit" class="btn btn-warning flex-fill">
                    <i class="fas fa-save me-2"></i>
                    Cập nhật thông tin
                </button>
                <a href="/Room/Index" class="btn btn-secondary">
                    <i class="fas fa-times-circle me-2"></i>
                    Hủy
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    <script>
        // Debug: Check if form values are loaded
        document.addEventListener('DOMContentLoaded', function() {
            console.log('=== Form Values Debug ===');
            console.log('Floor:', document.querySelector('input[name="Floor"]')?.value);
            console.log('RoomNumber:', document.querySelector('input[name="RoomNumber"]')?.value);
            console.log('Type:', document.querySelector('input[name="Type"]')?.value);
            console.log('MonthlyRent:', document.querySelector('input[name="MonthlyRent"]')?.value);
            console.log('Area:', document.querySelector('input[name="Area"]')?.value);
            console.log('IsAvailable:', document.querySelector('select[name="IsAvailable"]')?.value);
            console.log('Description:', document.querySelector('textarea[name="Description"]')?.value);
        });
    </script>
}
