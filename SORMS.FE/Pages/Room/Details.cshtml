@page "{id:int}"
@model SORMS.FE.Pages.Room.DetailsModel
@{
    ViewData["Title"] = "Chi tiết phòng";
}

<style>
    .details-container {
        max-width: 900px;
        margin: 2rem auto;
        padding: 2rem;
    }
    .details-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
        border-radius: 16px 16px 0 0;
        margin-bottom: 0;
    }
    .details-header h2 {
        margin: 0;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    .details-header .room-number {
        font-size: 2.5rem;
        font-weight: 700;
    }
    .details-body {
        background: white;
        border-radius: 0 0 16px 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        padding: 2rem;
    }
    .info-section {
        margin-bottom: 2rem;
        padding-bottom: 2rem;
        border-bottom: 2px solid #f0f0f0;
    }
    .info-section:last-child {
        border-bottom: none;
        margin-bottom: 0;
        padding-bottom: 0;
    }
    .section-title {
        font-size: 1.2rem;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    .section-title i {
        color: #667eea;
        font-size: 1.5rem;
    }
    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
    }
    .info-item {
        background: #f8f9fa;
        padding: 1.25rem;
        border-radius: 12px;
        border-left: 4px solid #667eea;
        transition: all 0.3s ease;
    }
    .info-item:hover {
        transform: translateX(5px);
        box-shadow: 0 4px 12px rgba(102,126,234,0.15);
    }
    .info-label {
        font-size: 0.85rem;
        color: #7f8c8d;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    .info-value {
        font-size: 1.25rem;
        font-weight: 600;
        color: #2c3e50;
    }
    .status-badge-large {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem 1.5rem;
        border-radius: 12px;
        font-size: 1.1rem;
        font-weight: 600;
    }
    .status-available {
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        color: white;
    }
    .status-occupied {
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        color: white;
    }
    .description-box {
        background: #f8f9fa;
        padding: 1.5rem;
        border-radius: 12px;
        border-left: 4px solid #667eea;
        color: #34495e;
        line-height: 1.8;
        font-size: 1rem;
    }
    .current-resident-card {
        background: linear-gradient(135deg, #667eea15 0%, #764ba215 100%);
        padding: 1.5rem;
        border-radius: 12px;
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    .resident-avatar {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
        font-weight: 700;
    }
    .action-buttons {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        flex-wrap: wrap;
    }
    .btn-modern {
        padding: 0.75rem 2rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }
    .btn-edit {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        border: none;
        color: white;
    }
    .btn-edit:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(245,87,108,0.4);
        color: white;
    }
    .btn-back {
        background: white;
        border: 2px solid #e0e6ed;
        color: #6c757d;
    }
    .btn-back:hover {
        background: #f8f9fa;
        border-color: #ced4da;
        color: #495057;
    }
    .btn-delete {
        background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
        border: none;
        color: white;
    }
    .btn-delete:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(231, 76, 60, 0.4);
        color: white;
    }
    .empty-description {
        color: #95a5a6;
        font-style: italic;
    }
</style>

<div class="details-container">
    @if (Model.Room != null)
    {
        <div class="details-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="room-number">Phòng @Model.Room.RoomNumber</div>
                    <div class="mt-2">@Model.Room.Type</div>
                </div>
                <div class="status-badge-large @(Model.Room.IsAvailable ? "status-available" : "status-occupied")">
                    <i class="fas @(Model.Room.IsAvailable ? "fa-check-circle" : "fa-user-check")"></i>
                    @(Model.Room.IsAvailable ? "Còn trống" : "Đã có người thuê")
                </div>
            </div>
        </div>

        <div class="details-body">
            <!-- Thông tin cơ bản -->
            <div class="info-section">
                <div class="section-title">
                    <i class="fas fa-info-circle"></i>
                    Thông tin cơ bản
                </div>
                <div class="info-grid">
                    <div class="info-item">
                        <div class="info-label">
                            <i class="fas fa-layer-group"></i>
                            Tầng
                        </div>
                        <div class="info-value">Tầng @Model.Room.Floor</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">
                            <i class="fas fa-tag"></i>
                            Loại phòng
                        </div>
                        <div class="info-value">@Model.Room.Type</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">
                            <i class="fas fa-expand-arrows-alt"></i>
                            Diện tích
                        </div>
                        <div class="info-value">@Model.Room.Area m²</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">
                            <i class="fas fa-money-bill-wave"></i>
                            Giá thuê / tháng
                        </div>
                        <div class="info-value">@Model.Room.MonthlyRent.ToString("N0") VNĐ</div>
                    </div>
                </div>
            </div>

            <!-- Trạng thái -->
            <div class="info-section">
                <div class="section-title">
                    <i class="fas fa-toggle-on"></i>
                    Trạng thái
                </div>
                <div class="info-grid">
                    <div class="info-item">
                        <div class="info-label">
                            <i class="fas fa-door-open"></i>
                            Tình trạng phòng
                        </div>
                        <div class="info-value">
                            @if (Model.Room.IsAvailable)
                            {
                                <span class="text-success">
                                    <i class="fas fa-check-circle me-2"></i>Còn trống
                                </span>
                            }
                            else
                            {
                                <span class="text-danger">
                                    <i class="fas fa-times-circle me-2"></i>Đã thuê
                                </span>
                            }
                        </div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">
                            <i class="fas fa-power-off"></i>
                            Trạng thái hoạt động
                        </div>
                        <div class="info-value">
                            @if (Model.Room.IsActive)
                            {
                                <span class="text-success">
                                    <i class="fas fa-check-circle me-2"></i>Đang hoạt động
                                </span>
                            }
                            else
                            {
                                <span class="text-secondary">
                                    <i class="fas fa-pause-circle me-2"></i>Ngừng hoạt động
                                </span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Cư dân hiện tại -->
            @if (!Model.Room.IsAvailable && !string.IsNullOrEmpty(Model.Room.CurrentResident))
            {
                <div class="info-section">
                    <div class="section-title">
                        <i class="fas fa-user"></i>
                        Cư dân hiện tại
                    </div>
                    <div class="current-resident-card">
                        <div class="resident-avatar">
                            @Model.Room.CurrentResident.Substring(0, 1).ToUpper()
                        </div>
                        <div>
                            <div class="fw-bold" style="font-size: 1.1rem; color: #2c3e50;">
                                @Model.Room.CurrentResident
                            </div>
                            <div class="text-muted">
                                <i class="fas fa-calendar-check me-2"></i>Đang thuê phòng
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Mô tả -->
            <div class="info-section">
                <div class="section-title">
                    <i class="fas fa-align-left"></i>
                    Mô tả phòng
                </div>
                @if (!string.IsNullOrEmpty(Model.Room.Description))
                {
                    <div class="description-box">
                        @Model.Room.Description
                    </div>
                }
                else
                {
                    <div class="description-box empty-description">
                        <i class="fas fa-info-circle me-2"></i>
                        Chưa có mô tả cho phòng này
                    </div>
                }
            </div>

            <!-- Action Buttons -->
            <div class="action-buttons">
                <a href="/Room/Edit/@Model.Room.Id" class="btn btn-edit btn-modern">
                    <i class="fas fa-edit"></i>
                    Chỉnh sửa thông tin
                </a>
                <a href="/Room/Index" class="btn btn-back btn-modern">
                    <i class="fas fa-arrow-left"></i>
                    Quay lại danh sách
                </a>
                @if (Model.Room.IsAvailable)
                {
                    <a href="/Resident/Create?roomId=@Model.Room.Id" class="btn btn-success btn-modern">
                        <i class="fas fa-user-plus"></i>
                        Thêm cư dân
                    </a>
                }
                @* Chỉ Admin mới thấy nút Delete *@
                @if (HttpContext.Session.GetString("UserRole") == "Admin")
                {
                    <a href="/Room/Delete/@Model.Room.Id" class="btn btn-delete btn-modern">
                        <i class="fas fa-trash-alt"></i>
                        Xóa phòng
                    </a>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle me-2"></i>
            Không tìm thấy thông tin phòng!
        </div>
        <a href="/Room/Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>
            Quay lại danh sách
        </a>
    }
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
}