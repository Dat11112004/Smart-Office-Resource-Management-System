@page "{id:int}"
@model SORMS.FE.Pages.Room.DeleteModel
@{
    ViewData["Title"] = "Xóa phòng";
}

<style>
    .delete-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .delete-header {
        background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
        color: white;
        padding: 30px;
        border-radius: 15px 15px 0 0;
        box-shadow: 0 4px 15px rgba(231, 76, 60, 0.3);
    }

    .delete-header h1 {
        margin: 0;
        font-size: 28px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .delete-header h1 i {
        font-size: 32px;
    }

    .delete-content {
        background: white;
        padding: 40px;
        border-radius: 0 0 15px 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .warning-box {
        background: linear-gradient(135deg, #fff3cd 0%, #ffe69c 100%);
        border-left: 5px solid #ffc107;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 30px;
        display: flex;
        align-items: start;
        gap: 15px;
    }

    .warning-box.soft-delete {
        background: linear-gradient(135deg, #d1ecf1 0%, #bee5eb 100%);
        border-left-color: #17a2b8;
    }

    .warning-box.hard-delete {
        background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%);
        border-left-color: #dc3545;
    }

    .warning-box i {
        font-size: 24px;
        margin-top: 2px;
    }

    .warning-box.soft-delete i {
        color: #17a2b8;
    }

    .warning-box.hard-delete i {
        color: #dc3545;
    }

    .warning-box .warning-content h3 {
        margin: 0 0 10px 0;
        font-size: 18px;
        font-weight: 600;
    }

    .warning-box .warning-content p {
        margin: 0;
        line-height: 1.6;
    }

    .room-details {
        background: #f8f9fa;
        padding: 25px;
        border-radius: 12px;
        margin-bottom: 30px;
    }

    .detail-row {
        display: grid;
        grid-template-columns: 200px 1fr;
        padding: 12px 0;
        border-bottom: 1px solid #dee2e6;
    }

    .detail-row:last-child {
        border-bottom: none;
    }

    .detail-label {
        font-weight: 600;
        color: #495057;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .detail-value {
        color: #212529;
    }

    .status-badge {
        display: inline-block;
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 500;
    }

    .status-badge.occupied {
        background: #dc3545;
        color: white;
    }

    .status-badge.available {
        background: #28a745;
        color: white;
    }

    .status-badge.inactive {
        background: #6c757d;
        color: white;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        justify-content: flex-end;
        margin-top: 30px;
    }

    .btn-delete {
        background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
        color: white;
        padding: 12px 30px;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .btn-delete:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(231, 76, 60, 0.4);
    }

    .btn-cancel {
        background: white;
        color: #6c757d;
        padding: 12px 30px;
        border: 2px solid #dee2e6;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .btn-cancel:hover {
        background: #f8f9fa;
        border-color: #adb5bd;
        color: #495057;
    }

    .delete-type-badge {
        display: inline-block;
        padding: 8px 20px;
        border-radius: 25px;
        font-size: 14px;
        font-weight: 600;
        margin-top: 10px;
    }

    .delete-type-badge.soft {
        background: #17a2b8;
        color: white;
    }

    .delete-type-badge.hard {
        background: #dc3545;
        color: white;
    }

    @@media (max-width: 768px) {
        .delete-container {
            margin: 20px auto;
        }

        .delete-header h1 {
            font-size: 22px;
        }

        .delete-content {
            padding: 25px;
        }

        .detail-row {
            grid-template-columns: 1fr;
            gap: 5px;
        }

        .action-buttons {
            flex-direction: column;
        }

        .btn-delete, .btn-cancel {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<div class="delete-container">
    <div class="delete-header">
        <h1>
            <i class="fas fa-exclamation-triangle"></i>
            Xác nhận xóa phòng
        </h1>
    </div>

    <div class="delete-content">
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="warning-box @(Model.DeleteType == "soft" ? "soft-delete" : "hard-delete")">
                <i class="@(Model.DeleteType == "soft" ? "fas fa-info-circle" : "fas fa-exclamation-triangle")"></i>
                <div class="warning-content">
                    <h3>@(Model.DeleteType == "soft" ? "Vô hiệu hóa phòng (Soft Delete)" : "Xóa vĩnh viễn (Hard Delete)")</h3>
                    <p>@Model.ErrorMessage</p>
                    <span class="delete-type-badge @Model.DeleteType">
                        @(Model.DeleteType == "soft" ? "SOFT DELETE - Giữ lại dữ liệu" : "HARD DELETE - Xóa hoàn toàn")
                    </span>
                </div>
            </div>
        }

        <div class="room-details">
            <h3 style="margin-top: 0; margin-bottom: 20px; color: #495057;">
                <i class="fas fa-door-open"></i> Thông tin phòng
            </h3>

            <div class="detail-row">
                <div class="detail-label">
                    <i class="fas fa-hashtag"></i> Số phòng
                </div>
                <div class="detail-value">
                    <strong style="font-size: 18px; color: #e74c3c;">@Model.Room.RoomNumber</strong>
                </div>
            </div>

            <div class="detail-row">
                <div class="detail-label">
                    <i class="fas fa-tag"></i> Loại phòng
                </div>
                <div class="detail-value">@Model.Room.Type</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">
                    <i class="fas fa-building"></i> Tầng
                </div>
                <div class="detail-value">Tầng @Model.Room.Floor</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">
                    <i class="fas fa-ruler-combined"></i> Diện tích
                </div>
                <div class="detail-value">@Model.Room.Area m²</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">
                    <i class="fas fa-money-bill-wave"></i> Giá thuê
                </div>
                <div class="detail-value">@Model.Room.MonthlyRent.ToString("N0") VNĐ/tháng</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">
                    <i class="fas fa-info-circle"></i> Trạng thái
                </div>
                <div class="detail-value">
                    @if (Model.Room.IsOccupied)
                    {
                        <span class="status-badge occupied">Đang có người thuê</span>
                    }
                    else if (Model.Room.IsAvailable)
                    {
                        <span class="status-badge available">Phòng trống</span>
                    }
                    else
                    {
                        <span class="status-badge inactive">Không khả dụng</span>
                    }
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Room.CurrentResident))
            {
                <div class="detail-row">
                    <div class="detail-label">
                        <i class="fas fa-user"></i> Người thuê hiện tại
                    </div>
                    <div class="detail-value">@Model.Room.CurrentResident</div>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.Room.Description))
            {
                <div class="detail-row">
                    <div class="detail-label">
                        <i class="fas fa-align-left"></i> Mô tả
                    </div>
                    <div class="detail-value">@Model.Room.Description</div>
                </div>
            }
        </div>

        <form method="post">
            @Html.AntiForgeryToken()
            <div class="action-buttons">
                <a href="/Room/Details/@Model.Room.Id" class="btn-cancel">
                    <i class="fas fa-times"></i>
                    Hủy bỏ
                </a>
                @if (Model.CanDelete)
                {
                    <button type="submit" class="btn-delete" onclick="return confirm('Bạn có chắc chắn muốn xóa phòng @Model.Room.RoomNumber không? Hành động này không thể hoàn tác!');">
                        <i class="fas fa-trash-alt"></i>
                        Xác nhận xóa
                    </button>
                }
            </div>
        </form>
    </div>
</div>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
