<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Smart Office Resource Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar">
            <div class="sidebar-header">
                <h3><i class="fas fa-building"></i> SORMS</h3>
                <p class="text-muted">Smart Office Resource Management</p>
            </div>

            <ul class="list-unstyled components">
                <li class="active">
                    <a href="/" class="nav-link">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                
                @* ADMIN & STAFF: Residents Management *@
                @await Component.InvokeAsync("MenuByRole", new { allowedRoles = new[] { 1, 2 }, menuId = "residents" })
                
                @* RESIDENT ONLY: My Profile *@
                @await Component.InvokeAsync("MenuByRole", new { allowedRoles = new[] { 3 }, menuId = "myprofile" })
                
                @* ALL: Rooms Management (Resident can view and rent) *@
                @await Component.InvokeAsync("MenuByRole", new { allowedRoles = new[] { 1, 2, 3 }, menuId = "rooms" })


                @* ADMIN ONLY: Staff Management *@
                @await Component.InvokeAsync("MenuByRole", new { allowedRoles = new[] { 1 }, menuId = "staff" })

                @* ALL: Service Requests *@
                @await Component.InvokeAsync("MenuByRole", new { allowedRoles = new[] { 1, 2, 3 }, menuId = "services" })

                @* ADMIN & STAFF: Reports *@
                @await Component.InvokeAsync("MenuByRole", new { allowedRoles = new[] { 1, 2 }, menuId = "reports" })

                @* ALL: Notifications *@
                @await Component.InvokeAsync("MenuByRole", new { allowedRoles = new[] { 1, 2, 3 }, menuId = "notifications" })
            </ul>

            <div class="sidebar-footer">
                @await Component.InvokeAsync("UserInfo")
                <div class="logout-section">
                    <a href="/Auth/Login" class="btn btn-outline-light btn-sm">
                        <i class="fas fa-sign-out-alt"></i> Đăng xuất
                    </a>
                </div>
            </div>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <!-- Top Navigation -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-outline-secondary">
                        <i class="fas fa-bars"></i>
                    </button>

                    <div class="navbar-nav ms-auto">
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-bell"></i>
                                <span class="badge bg-danger">3</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><h6 class="dropdown-header">Thông báo mới</h6></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-circle text-success me-2"></i>Hóa đơn mới cần xử lý</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-circle text-warning me-2"></i>Yêu cầu dịch vụ chờ duyệt</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-circle text-info me-2"></i>Phòng mới được đăng ký</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-center" href="#">Xem tất cả</a></li>
                            </ul>
                        </div>

                        @await Component.InvokeAsync("NavbarUser")
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="main-content">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



