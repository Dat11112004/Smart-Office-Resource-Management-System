        font-size: 20px;
        font-weight: 600;
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 12px;
        padding-bottom: 15px;
        border-bottom: 2px solid #e9ecef;
    }

    .form-section h3 i {
        font-size: 22px;
    }

    .form-group-modern {
        margin-bottom: 25px;
        position: relative;
    }

    .form-label-modern {
        display: block;
        font-weight: 600;
        color: #495057;
        margin-bottom: 10px;
        font-size: 14px;
        letter-spacing: 0.3px;
    }

    .form-control-modern {
        width: 100%;
        padding: 14px 18px;
        border: 2px solid #e9ecef;
        border-radius: 10px;
        font-size: 15px;
        transition: all 0.3s ease;
        background: white;
    }

    .form-control-modern:hover {
        border-color: #cbd5e0;
    }

    .form-control-modern:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
        background: #f8f9ff;
    }

    .btn-save {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 14px 35px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 15px;
        cursor: pointer;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        box-shadow: 0 4px 10px rgba(102, 126, 234, 0.2);
    }

    .btn-save:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
    }

    .btn-save:active {
        transform: translateY(-1px);
        box-shadow: 0 3px 10px rgba(102, 126, 234, 0.3);
    }

    .btn-save i {
        font-size: 16px;
    }

    .alert-modern {
        padding: 18px 25px;
        border-radius: 12px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 12px;
        font-weight: 500;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        animation: slideDown 0.4s ease;
    }

    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .alert-success {
        background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%);
        color: #155724;
        border-left: 5px solid #28a745;
    }

    .alert-success i {
        color: #28a745;
        font-size: 20px;
    }

    .alert-error {
        background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%);
        color: #721c24;
        border-left: 5px solid #dc3545;
    }

    .alert-error i {
        color: #dc3545;
        font-size: 20px;
    }

    .text-danger {
        color: #dc3545;
        font-size: 13px;
        margin-top: 5px;
        display: block;
    }

    textarea.form-control-modern {
        resize: vertical;
        min-height: 120px;
        font-family: inherit;
        line-height: 1.6;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .settings-container {
            margin: 20px auto;
            padding: 0 10px;
        }

        .settings-header {
            padding: 25px 20px;
        }

        .settings-header h1 {
            font-size: 24px;
        }

        .nav-tabs .nav-link {
            padding: 15px 20px;
            font-size: 14px;
        }

        .tab-content {
            padding: 20px 15px;
        }

        .form-section {
            padding: 20px;
        }

        .btn-save {
            width: 100%;
            justify-content: center;
        }
    }

    /* Smooth transitions */
    * {
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }

</style>

