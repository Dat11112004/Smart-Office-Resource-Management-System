@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function() {
        console.log('‚úÖ Settings page loaded');
        
        // Force form submissions to work properly in tabs
        var updateProfileForm = document.querySelector('form[action*="UpdateProfile"]');
        if (!updateProfileForm) {
            // If no action attribute, find form with UpdateProfile handler
            var allForms = document.querySelectorAll('form');
            allForms.forEach(function(f) {
                if (f.querySelector('input[name="Address"]')) {
                    updateProfileForm = f;
                }
            });
        }
        
        if (updateProfileForm) {
            console.log('‚úÖ Found UpdateProfile form');
            
            // Remove any existing submit handlers that might interfere
            var newForm = updateProfileForm.cloneNode(true);
            updateProfileForm.parentNode.replaceChild(newForm, updateProfileForm);
            updateProfileForm = newForm;
            
            // Force correct action URL
            updateProfileForm.action = '/Resident/Settings?handler=UpdateProfile';
            updateProfileForm.method = 'post';
            
            console.log('Form action set to: ' + updateProfileForm.action);
            
            // Handle submit button click
            var submitBtn = updateProfileForm.querySelector('button[type="submit"]');
            if (submitBtn) {
                submitBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    console.log('üîµ Submit button clicked - forcing POST');
                    updateProfileForm.submit();
                });
            }
        } else {
            console.error('‚ùå UpdateProfile form not found!');
        }
    });
</script>
