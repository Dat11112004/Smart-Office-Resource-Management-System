@page
@model SORMS.FE.Pages.Resident.CheckInStatusModel
@{
    ViewData["Title"] = "Trạng Thái Check-in";
}

<style>
    * {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    .status-header {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
        padding: 2.5rem 2rem;
        border-radius: 16px;
        margin-bottom: 2rem;
        box-shadow: 0 8px 30px rgba(240,147,251,0.25);
    }
    .status-header h2 {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }
    .status-header p {
        font-size: 1rem;
        opacity: 0.95;
        margin: 0;
    }
    .status-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 3px 12px rgba(0,0,0,0.08);
        overflow: hidden;
        border: none;
        margin-bottom: 2rem;
    }
    .status-card-header {
        padding: 1.25rem 1.5rem;
        border: none;
    }
    .status-card-header h5 {
        font-size: 1.1rem;
        font-weight: 700;
        margin: 0;
    }
    .status-card-header.pending {
        background: linear-gradient(135deg, #f6d365 0%, #fda085 100%);
    }
    .status-card-header.approved {
        background: linear-gradient(135deg, #84fab0 0%, #8fd3f4 100%);
    }
    .status-card-header.rejected {
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
    }
    .status-card-header.checkedin {
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
    }
    .status-info-box {
        background: #f8f9fa;
        padding: 1rem;
        border-radius: 10px;
        margin-bottom: 1rem;
    }
    .status-info-box p {
        margin: 0;
        font-size: 0.9rem;
        line-height: 1.6;
    }
    .status-info-box i {
        color: #667eea;
        margin-right: 0.5rem;
    }
    .status-info-box strong {
        color: #2c3e50;
        font-size: 0.9rem;
    }
    .status-alert {
        border-radius: 10px;
        padding: 1rem;
        border: none;
        font-size: 0.9rem;
    }
    .status-alert strong {
        font-size: 0.95rem;
    }
    .status-alert small {
        font-size: 0.85rem;
    }
    .btn-checkout-request {
        background: linear-gradient(135deg, #f6d365 0%, #fda085 100%);
        color: white;
        border: none;
        padding: 0.7rem 1.5rem;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.95rem;
        transition: all 0.3s ease;
    }
    .btn-checkout-request:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 15px rgba(246,211,101,0.3);
        color: white;
    }
    .history-section {
        background: white;
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: 0 3px 12px rgba(0,0,0,0.08);
    }
    .history-section h4 {
        color: #2c3e50;
        font-weight: 700;
        font-size: 1.2rem;
        margin-bottom: 1.5rem;
    }
    .table-modern {
        margin-bottom: 0;
        border-radius: 10px;
        overflow: hidden;
    }
    .table-modern thead {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }
    .table-modern thead th {
        padding: 1rem 0.75rem;
        font-weight: 600;
        font-size: 0.9rem;
        border: none;
        text-align: center;
        vertical-align: middle;
    }
    .table-modern tbody td {
        padding: 1rem 0.75rem;
        font-size: 0.9rem;
        text-align: center;
        vertical-align: middle;
        color: #495057;
    }
    .table-modern tbody tr {
        transition: all 0.2s ease;
        border-bottom: 1px solid #f0f0f0;
    }
    .table-modern tbody tr:hover {
        background: #f8f9fa;
    }
    .status-badge {
        padding: 0.35rem 0.75rem;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.82rem;
        display: inline-block;
    }
    .empty-state-status {
        text-align: center;
        padding: 3rem 2rem;
        background: white;
        border-radius: 12px;
        box-shadow: 0 3px 12px rgba(0,0,0,0.08);
    }
    .empty-state-status i {
        font-size: 3.5rem;
        color: #e0e6ed;
        margin-bottom: 1rem;
    }
    .empty-state-status h3 {
        font-size: 1.3rem;
        color: #2c3e50;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }
    .empty-state-status h5 {
        font-size: 1.1rem;
        color: #7f8c8d;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }
    .empty-state-status p {
        font-size: 0.9rem;
        color: #95a5a6;
    }
    .modal-content {
        border-radius: 12px;
        border: none;
        box-shadow: 0 10px 40px rgba(0,0,0,0.15);
    }
    .modal-header {
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid #e9ecef;
        border-radius: 12px 12px 0 0;
    }
    .modal-title {
        font-weight: 700;
        font-size: 1.1rem;
    }
    .modal-body {
        padding: 1.5rem;
        font-size: 0.95rem;
    }
    .modal-footer {
        padding: 1rem 1.5rem;
        border-top: 1px solid #e9ecef;
    }
    .btn {
        padding: 0.6rem 1.2rem;
        font-weight: 600;
        font-size: 0.9rem;
        border-radius: 8px;
    }
    .alert {
        border-radius: 10px;
        font-size: 0.92rem;
        padding: 1rem 1.25rem;
    }
</style>

<div class="status-header">
    <div class="container">
        <h2>
            <i class="fas fa-clipboard-check me-3"></i>
            Trạng Thái Check-in
        </h2>
        <p>Theo dõi trạng thái và lịch sử check-in của bạn</p>
    </div>
</div>

<div class="container mt-4">
    <!-- Back Button -->
    <div style="margin-bottom: 1.5rem;">
        <a href="javascript:history.back()" style="display: inline-flex; align-items: center; gap: 0.5rem; padding: 0.75rem 1.5rem; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; text-decoration: none; border-radius: 12px; font-weight: 600; box-shadow: 0 4px 15px rgba(102,126,234,0.3); transition: all 0.3s ease;">
            <i class="fas fa-arrow-left"></i> Quay Lại
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.CurrentStatus == null)
    {
        <div class="empty-state-status">
            <i class="fas fa-inbox"></i>
            <h3>Chưa có yêu cầu check-in</h3>
            <p class="mb-4">Bạn chưa có yêu cầu check-in nào hoặc chưa check-in vào phòng.</p>
            <a href="/Resident/AvailableRooms" class="btn btn-primary btn-lg" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none;">
                <i class="fas fa-door-open me-2"></i> Xem Phòng Trống
            </a>
        </div>
    }
    else
    {
        <div class="status-card">
            <div class="status-card-header @(Model.CurrentStatus.Status == "PendingCheckIn" ? "pending" : Model.CurrentStatus.Status == "CheckedIn" ? "checkedin" : Model.CurrentStatus.Status == "Rejected" ? "rejected" : "approved") text-white">
                <h5 class="mb-0">
                    <i class="fas @GetStatusIcon(Model.CurrentStatus.Status) me-2"></i>
                    @GetStatusText(Model.CurrentStatus.Status)
                </h5>
            </div>
            <div class="card-body p-4">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="status-info-box">
                            <p class="mb-2">
                                <i class="fas fa-door-closed"></i>
                                <strong>Phòng:</strong> @Model.CurrentStatus.RoomNumber
                            </p>
                        </div>
                        <div class="status-info-box">
                            <p class="mb-2">
                                <i class="fas fa-clock"></i>
                                <strong>Thời gian yêu cầu:</strong><br>
                                @Model.CurrentStatus.RequestTime?.ToString("dd/MM/yyyy HH:mm")
                            </p>
                        </div>
                        
                        @if (Model.CurrentStatus.Status == "CheckedIn")
                        {
                            <div class="status-info-box">
                                <p class="mb-2">
                                    <i class="fas fa-check-circle"></i>
                                    <strong>Thời gian check-in:</strong><br>
                                    @Model.CurrentStatus.CheckInTime?.ToString("dd/MM/yyyy HH:mm")
                                </p>
                            </div>
                            <div class="status-info-box">
                                <p class="mb-2">
                                    <i class="fas fa-user-check"></i>
                                    <strong>Phê duyệt bởi:</strong><br>
                                    @Model.CurrentStatus.ApprovedByName
                                </p>
                            </div>
                        }

                        @if (Model.CurrentStatus.Status == "PendingCheckOut")
                        {
                            <div class="status-info-box">
                                <p class="mb-2">
                                    <i class="fas fa-clock"></i>
                                    <strong>Yêu cầu check-out lúc:</strong><br>
                                    @Model.CurrentStatus.CheckOutRequestTime?.ToString("dd/MM/yyyy HH:mm")
                                </p>
                            </div>
                        }

                        @if (Model.CurrentStatus.Status == "Rejected")
                        {
                            <div style="background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%); padding: 1.25rem; border-radius: 12px; border-left: 4px solid #dc3545; color: #721c24;">
                                <div style="display: flex; align-items: center; gap: 0.75rem; margin-bottom: 0.75rem;">
                                    <div style="width: 32px; height: 32px; background: rgba(220,53,69,0.2); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                        <i class="fas fa-exclamation-triangle" style="color: #dc3545;"></i>
                                    </div>
                                    <strong style="font-size: 1rem;">Lý do từ chối:</strong>
                                </div>
                                <div style="padding-left: 2.5rem; font-size: 0.95rem;">@Model.CurrentStatus.RejectReason</div>
                            </div>
                        }
                    </div>

                    <div class="col-md-6 mb-3">
                        @if (Model.CurrentStatus.Status == "PendingCheckIn")
                        {
                            <div style="background: linear-gradient(135deg, #fff3cd 0%, #fff3cd 100%); padding: 1.25rem; border-radius: 12px; border-left: 4px solid #ffc107; color: #856404;">
                                <div style="display: flex; align-items: center; gap: 0.75rem; margin-bottom: 0.5rem;">
                                    <div style="width: 32px; height: 32px; background: rgba(255,193,7,0.2); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                        <i class="fas fa-hourglass-half" style="color: #ffc107;"></i>
                                    </div>
                                    <strong style="font-size: 1rem;">Đang chờ phê duyệt</strong>
                                </div>
                                <small style="font-size: 0.9rem; opacity: 0.9;">Yêu cầu check-in của bạn đang chờ Staff/Admin xem xét.</small>
                            </div>
                        }
                        else if (Model.CurrentStatus.Status == "CheckedIn")
                        {
                            <div style="background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%); padding: 1.25rem; border-radius: 12px; margin-bottom: 1.5rem; border-left: 4px solid #28a745; color: #155724;">
                                <div style="display: flex; align-items: center; gap: 0.75rem; margin-bottom: 0.5rem;">
                                    <div style="width: 32px; height: 32px; background: rgba(40,167,69,0.2); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                        <i class="fas fa-check-circle" style="color: #28a745;"></i>
                                    </div>
                                    <strong style="font-size: 1rem;">Check-in thành công!</strong>
                                </div>
                                <small style="font-size: 0.9rem; opacity: 0.9;">Bạn đã check-in vào phòng thành công.</small>
                            </div>
                            <button type="button" 
                                    onclick="requestCheckOut()"
                                    style="width: 100%; padding: 1rem 1.5rem; background: linear-gradient(135deg, #f6d365 0%, #fda085 100%); color: white; border: none; border-radius: 12px; font-weight: 600; font-size: 1rem; transition: all 0.3s ease; box-shadow: 0 4px 15px rgba(246,211,101,0.3); cursor: pointer; display: flex; align-items: center; justify-content: center; gap: 0.75rem;">
                                <i class="fas fa-sign-out-alt"></i> Yêu Cầu Check-out
                            </button>
                        }
                        else if (Model.CurrentStatus.Status == "PendingCheckOut")
                        {
                            <div style="background: linear-gradient(135deg, #d1ecf1 0%, #bee5eb 100%); padding: 1.25rem; border-radius: 12px; border-left: 4px solid #17a2b8; color: #0c5460;">
                                <div style="display: flex; align-items: center; gap: 0.75rem; margin-bottom: 0.5rem;">
                                    <div style="width: 32px; height: 32px; background: rgba(23,162,184,0.2); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                        <i class="fas fa-hourglass-half" style="color: #17a2b8;"></i>
                                    </div>
                                    <strong style="font-size: 1rem;">Đang chờ phê duyệt check-out</strong>
                                </div>
                                <small style="font-size: 0.9rem; opacity: 0.9;">Yêu cầu check-out của bạn đang chờ Staff/Admin xem xét.</small>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Lịch sử check-in -->
        <div class="history-section mt-4">
            <h4>
                <i class="fas fa-history me-2"></i> Lịch Sử Check-in
            </h4>

            @if (Model.History == null || !Model.History.Any())
            {
                <div class="empty-state-status">
                    <i class="fas fa-folder-open"></i>
                    <h5>Chưa có lịch sử</h5>
                    <p>Bạn chưa có lịch sử check-in nào.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-modern table-hover">
                        <thead>
                            <tr>
                                <th>Phòng</th>
                                <th>Yêu cầu lúc</th>
                                <th>Check-in</th>
                                <th>Check-out</th>
                                <th>Trạng thái</th>
                                <th>Phê duyệt bởi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var record in Model.History)
                            {
                                <tr>
                                    <td><strong>@record.RoomNumber</strong></td>
                                    <td>@record.RequestTime?.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@(record.CheckInTime?.ToString("dd/MM/yyyy HH:mm") ?? "-")</td>
                                    <td>@(record.CheckOutTime?.ToString("dd/MM/yyyy HH:mm") ?? "-")</td>
                                    <td>
                                        <span class="status-badge @GetStatusBadgeClass(record.Status)">
                                            @GetStatusText(record.Status)
                                        </span>
                                    </td>
                                    <td>@(record.ApprovedByName ?? "-")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    }
</div>

<!-- Modal xác nhận check-out -->
<div class="modal fade" id="checkOutModal" tabindex="-1">
    <div class="modal-dialog" style="max-width: 500px;">
        <div style="border-radius: 16px; border: none; box-shadow: 0 10px 40px rgba(0,0,0,0.2); overflow: hidden; background: white;">
            <div style="padding: 1.5rem 2rem; background: linear-gradient(135deg, #f6d365 0%, #fda085 100%); color: white; border: none;">
                <h5 style="margin: 0; font-weight: 700; font-size: 1.25rem; display: flex; align-items: center; gap: 0.75rem;">
                    <div style="width: 36px; height: 36px; background: rgba(255,255,255,0.2); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-question-circle"></i>
                    </div>
                    Xác Nhận Yêu Cầu Check-out
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" style="position: absolute; top: 1.5rem; right: 1.5rem; opacity: 0.8;"></button>
            </div>
            <div style="padding: 2rem;">
                <div style="background: linear-gradient(135deg, #fff5e6 0%, #ffe8cc 100%); padding: 1.25rem; border-radius: 12px; margin-bottom: 1.5rem; border-left: 4px solid #f6d365;">
                    <p style="margin: 0 0 0.75rem 0; font-size: 1rem; color: #2c3e50; font-weight: 600;">
                        <i class="fas fa-door-open" style="color: #f6d365; margin-right: 0.5rem;"></i>
                        Bạn có chắc chắn muốn yêu cầu check-out khỏi phòng <strong style="color: #e67e22;">@Model.CurrentStatus?.RoomNumber</strong>?
                    </p>
                    <p style="margin: 0; font-size: 0.9rem; color: #7f8c8d; display: flex; align-items: center; gap: 0.5rem;">
                        <i class="fas fa-info-circle" style="color: #f6d365;"></i>
                        Yêu cầu sẽ được gửi đến Staff/Admin để phê duyệt.
                    </p>
                </div>
                <div style="display: flex; gap: 1rem; justify-content: flex-end;">
                    <button type="button" class="btn" data-bs-dismiss="modal" style="padding: 0.75rem 1.5rem; background: linear-gradient(135deg, #95a5a6 0%, #7f8c8d 100%); color: white; border: none; border-radius: 10px; font-weight: 600; font-size: 0.95rem; transition: all 0.3s ease; box-shadow: 0 4px 12px rgba(127,140,141,0.3);">
                        <i class="fas fa-times"></i> Hủy
                    </button>
                    <form method="post" asp-page-handler="CheckOut" style="margin: 0;">
                        <input type="hidden" name="checkInRecordId" value="@Model.CurrentStatus?.Id" />
                        <button type="submit" style="padding: 0.75rem 1.5rem; background: linear-gradient(135deg, #f6d365 0%, #fda085 100%); color: white; border: none; border-radius: 10px; font-weight: 600; font-size: 0.95rem; transition: all 0.3s ease; box-shadow: 0 4px 12px rgba(246,211,101,0.3); cursor: pointer;">
                            <i class="fas fa-check"></i> Xác Nhận
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function requestCheckOut() {
        const modalEl = document.getElementById('checkOutModal');
        if (!modalEl) {
            console.error('Modal element not found');
            return;
        }
        
        // Kiểm tra xem Bootstrap đã load chưa
        if (typeof bootstrap === 'undefined') {
            console.error('Bootstrap chưa được load');
            return;
        }
        
        // Lấy instance hiện có hoặc tạo mới
        const modal = bootstrap.Modal.getInstance(modalEl) || new bootstrap.Modal(modalEl);
        modal.show();
    }
</script>

@functions {
    private string GetStatusText(string status)
    {
        return status switch
        {
            "PendingCheckIn" => "Chờ Phê Duyệt Check-in",
            "CheckedIn" => "Đã Check-in",
            "PendingCheckOut" => "Chờ Phê Duyệt Check-out",
            "CheckedOut" => "Đã Check-out",
            "Rejected" => "Bị Từ Chối",
            _ => status
        };
    }

    private string GetStatusBgClass(string status)
    {
        return status switch
        {
            "PendingCheckIn" => "bg-warning",
            "CheckedIn" => "bg-success",
            "PendingCheckOut" => "bg-info",
            "CheckedOut" => "bg-secondary",
            "Rejected" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "PendingCheckIn" => "bg-warning text-dark",
            "CheckedIn" => "bg-success text-white",
            "PendingCheckOut" => "bg-info text-dark",
            "CheckedOut" => "bg-secondary text-white",
            "Rejected" => "bg-danger text-white",
            _ => "bg-secondary text-white"
        };
    }

    private string GetStatusIcon(string status)
    {
        return status switch
        {
            "PendingCheckIn" => "fa-hourglass-half",
            "CheckedIn" => "fa-check-circle",
            "PendingCheckOut" => "fa-hourglass-half",
            "CheckedOut" => "fa-door-open",
            "Rejected" => "fa-times-circle",
            _ => "fa-info-circle"
        };
    }
}
