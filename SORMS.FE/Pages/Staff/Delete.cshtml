@page "{id:int}"
@model SORMS.FE.Pages.Staff.DeleteModel
@{
    ViewData["Title"] = "Xóa nhân viên";
}

<style>
    .delete-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .delete-header {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        color: white;
        padding: 35px 40px;
        border-radius: 15px 15px 0 0;
        box-shadow: 0 4px 15px rgba(239, 68, 68, 0.3);
        position: relative;
        overflow: hidden;
    }

    .delete-header::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 300px;
        height: 300px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
    }

    .delete-header h1 {
        margin: 0;
        font-size: 28px;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 15px;
        position: relative;
        z-index: 1;
    }

    .delete-header h1 i {
        font-size: 32px;
    }

    .delete-body {
        background: white;
        border-radius: 0 0 15px 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        padding: 40px;
    }

    .warning-box {
        background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
        border-left: 5px solid #f59e0b;
        padding: 20px 25px;
        border-radius: 10px;
        margin-bottom: 30px;
        display: flex;
        align-items: start;
        gap: 15px;
    }

    .warning-box i {
        color: #f59e0b;
        font-size: 28px;
        margin-top: 2px;
    }

    .warning-content h3 {
        color: #92400e;
        font-size: 18px;
        font-weight: 700;
        margin: 0 0 10px 0;
    }

    .warning-content p {
        color: #78350f;
        margin: 0;
        line-height: 1.6;
    }

    .info-section {
        background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
        padding: 25px;
        border-radius: 10px;
        border-left: 4px solid #ef4444;
        margin-bottom: 25px;
    }

    .info-section h3 {
        color: #ef4444;
        font-size: 18px;
        font-weight: 600;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid #e9ecef;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
    }

    .info-item {
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    .info-label {
        font-size: 13px;
        color: #6c757d;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .info-value {
        font-size: 15px;
        color: #2d3748;
        font-weight: 500;
    }

    .alert-modern {
        padding: 18px 25px;
        border-radius: 12px;
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 12px;
        font-weight: 500;
    }

    .alert-error {
        background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
        color: #991b1b;
        border-left: 5px solid #ef4444;
    }

    .alert-error i {
        color: #ef4444;
        font-size: 20px;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        justify-content: center;
        margin-top: 30px;
        padding-top: 25px;
        border-top: 2px solid #e9ecef;
    }

    .btn-action {
        padding: 14px 35px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 15px;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
        border: none;
        cursor: pointer;
    }

    .btn-delete {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        color: white;
        box-shadow: 0 4px 10px rgba(239, 68, 68, 0.2);
    }

    .btn-delete:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(239, 68, 68, 0.4);
        color: white;
    }

    .btn-cancel {
        background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
        color: white;
        box-shadow: 0 4px 10px rgba(107, 114, 128, 0.2);
    }

    .btn-cancel:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(107, 114, 128, 0.4);
        color: white;
    }

    @@media (max-width: 768px) {
        .delete-container {
            margin: 20px auto;
        }

        .delete-header {
            padding: 25px 20px;
        }

        .delete-body {
            padding: 25px;
        }

        .info-grid {
            grid-template-columns: 1fr;
        }

        .action-buttons {
            flex-direction: column;
        }

        .btn-action {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<div class="delete-container">
    <div class="delete-header">
        <h1>
            <i class="fas fa-trash-alt"></i>
            Xác nhận xóa nhân viên
        </h1>
    </div>

    <div class="delete-body">
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert-modern alert-error">
                <i class="fas fa-exclamation-circle"></i>
                <span>@Model.ErrorMessage</span>
            </div>
        }

        <div class="warning-box">
            <i class="fas fa-exclamation-triangle"></i>
            <div class="warning-content">
                <h3>Cảnh báo!</h3>
                <p>
                    Bạn có chắc chắn muốn xóa nhân viên này không? 
                    <strong>Hành động này không thể hoàn tác.</strong>
                    Tất cả dữ liệu liên quan đến nhân viên sẽ bị xóa vĩnh viễn.
                </p>
            </div>
        </div>

        @if (Model.Staff != null)
        {
            <div class="info-section">
                <h3>Thông tin nhân viên sẽ bị xóa</h3>
                <div class="info-grid">
                    <div class="info-item">
                        <span class="info-label">ID</span>
                        <span class="info-value">@Model.Staff.Id</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Họ và tên</span>
                        <span class="info-value">@Model.Staff.FullName</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Email</span>
                        <span class="info-value">@Model.Staff.Email</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Số điện thoại</span>
                        <span class="info-value">@(Model.Staff.Phone ?? "N/A")</span>
                    </div>
                </div>
            </div>

            <form method="post">
                @Html.AntiForgeryToken()
                <div class="action-buttons">
                    <button type="submit" class="btn-action btn-delete">
                        <i class="fas fa-trash-alt"></i>
                        Xác nhận xóa
                    </button>
                    <a href="/Staff/Details/@Model.Staff.Id" class="btn-action btn-cancel">
                        <i class="fas fa-times"></i>
                        Hủy bỏ
                    </a>
                </div>
            </form>
        }
        else
        {
            <div class="alert-modern alert-error">
                <i class="fas fa-exclamation-triangle"></i>
                <span>Không tìm thấy thông tin nhân viên.</span>
            </div>
            <div class="text-center mt-4">
                <a href="/Staff/Index" class="btn-action btn-cancel">
                    <i class="fas fa-arrow-left"></i>
                    Quay lại danh sách
                </a>
            </div>
        }
    </div>
</div>
