@page "{id:int}"
@model SORMS.FE.Pages.Staff.DetailsModel
@{
    ViewData["Title"] = "Chi tiết nhân viên";
}

<style>
    .details-container {
        max-width: 1000px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .details-header {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        color: white;
        padding: 35px 40px;
        border-radius: 15px 15px 0 0;
        box-shadow: 0 4px 15px rgba(17, 153, 142, 0.3);
        position: relative;
        overflow: hidden;
    }

    .details-header::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 300px;
        height: 300px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
    }

    .details-header::after {
        content: '';
        position: absolute;
        bottom: -30%;
        left: -5%;
        width: 200px;
        height: 200px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 50%;
    }

    .details-header h1 {
        margin: 0 0 10px 0;
        font-size: 28px;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 15px;
        position: relative;
        z-index: 1;
    }

    .details-header h1 i {
        font-size: 32px;
        animation: rotate 3s linear infinite;
    }

    @@keyframes rotate {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    .details-header p {
        margin: 0;
        opacity: 0.95;
        position: relative;
        z-index: 1;
    }

    .details-body {
        background: white;
        border-radius: 0 0 15px 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        padding: 40px;
    }

    .info-section {
        margin-bottom: 30px;
    }

    .info-section h3 {
        color: #11998e;
        font-size: 18px;
        font-weight: 600;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid #e9ecef;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
    }

    .info-card {
        background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
        padding: 20px;
        border-radius: 10px;
        border-left: 4px solid #11998e;
        transition: all 0.3s;
    }

    .info-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .info-label {
        font-size: 13px;
        color: #6c757d;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .info-label i {
        color: #11998e;
    }

    .info-value {
        font-size: 16px;
        color: #2d3748;
        font-weight: 600;
    }

    .alert-modern {
        padding: 18px 25px;
        border-radius: 12px;
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 12px;
        font-weight: 500;
    }

    .alert-error {
        background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
        color: #991b1b;
        border-left: 5px solid #ef4444;
    }

    .alert-error i {
        color: #ef4444;
        font-size: 20px;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        justify-content: center;
        margin-top: 30px;
        padding-top: 25px;
        border-top: 2px solid #e9ecef;
        flex-wrap: wrap;
    }

    .btn-action {
        padding: 14px 28px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 15px;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
        border: none;
    }

    .btn-edit {
        background: linear-gradient(135deg, #f59e0b 0%, #f97316 100%);
        color: white;
        box-shadow: 0 4px 10px rgba(245, 158, 11, 0.2);
    }

    .btn-edit:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(245, 158, 11, 0.4);
        color: white;
    }

    .btn-delete {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        color: white;
        box-shadow: 0 4px 10px rgba(239, 68, 68, 0.2);
    }

    .btn-delete:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(239, 68, 68, 0.4);
        color: white;
    }

    .btn-back {
        background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
        color: white;
        box-shadow: 0 4px 10px rgba(107, 114, 128, 0.2);
    }

    .btn-back:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(107, 114, 128, 0.4);
        color: white;
    }

    @@media (max-width: 768px) {
        .details-container {
            margin: 20px auto;
        }

        .details-header {
            padding: 25px 20px;
        }

        .details-body {
            padding: 25px;
        }

        .info-grid {
            grid-template-columns: 1fr;
        }

        .action-buttons {
            flex-direction: column;
        }

        .btn-action {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<div class="details-container">
    <div class="details-header">
        <h1>
            <i class="fas fa-user-tie"></i>
            Chi tiết nhân viên
        </h1>
        <p>Thông tin chi tiết về nhân viên #@(Model.Staff?.Id ?? 0)</p>
    </div>

    <div class="details-body">
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert-modern alert-error">
                <i class="fas fa-exclamation-circle"></i>
                <span>@Model.ErrorMessage</span>
            </div>
        }

        @if (Model.Staff != null)
        {
            <div class="info-section">
                <h3>
                    <i class="fas fa-user"></i>
                    Thông tin cá nhân
                </h3>
                <div class="info-grid">
                    <div class="info-card">
                        <div class="info-label">
                            <i class="fas fa-id-badge"></i>
                            ID nhân viên
                        </div>
                        <div class="info-value">#@Model.Staff.Id</div>
                    </div>
                    <div class="info-card">
                        <div class="info-label">
                            <i class="fas fa-user"></i>
                            Họ và tên
                        </div>
                        <div class="info-value">@Model.Staff.FullName</div>
                    </div>
                </div>
            </div>

            <div class="info-section">
                <h3>
                    <i class="fas fa-envelope"></i>
                    Thông tin liên hệ
                </h3>
                <div class="info-grid">
                    <div class="info-card">
                        <div class="info-label">
                            <i class="fas fa-envelope"></i>
                            Email
                        </div>
                        <div class="info-value">@Model.Staff.Email</div>
                    </div>
                    <div class="info-card">
                        <div class="info-label">
                            <i class="fas fa-phone"></i>
                            Số điện thoại
                        </div>
                        <div class="info-value">@(Model.Staff.Phone ?? "Chưa cập nhật")</div>
                    </div>
                </div>
            </div>

            <div class="action-buttons">
                <a href="/Staff/Edit/@Model.Staff.Id" class="btn-action btn-edit">
                    <i class="fas fa-edit"></i>
                    Chỉnh sửa
                </a>
                <a href="/Staff/Delete/@Model.Staff.Id" class="btn-action btn-delete">
                    <i class="fas fa-trash"></i>
                    Xóa nhân viên
                </a>
                <a href="/Staff/Index" class="btn-action btn-back">
                    <i class="fas fa-arrow-left"></i>
                    Quay lại
                </a>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-user-times" style="font-size: 64px; color: #dee2e6;"></i>
                <h3 style="margin-top: 20px; color: #6c757d;">Không tìm thấy thông tin nhân viên</h3>
                <a href="/Staff/Index" class="btn-action btn-back" style="margin-top: 20px;">
                    <i class="fas fa-arrow-left"></i>
                    Quay lại danh sách
                </a>
            </div>
        }
    </div>
</div>
