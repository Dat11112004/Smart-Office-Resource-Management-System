@page "{id:int}"
@model SORMS.FE.Pages.Staff.EditModel
@{
    ViewData["Title"] = "Chỉnh sửa nhân viên";
}

<style>
    .edit-container {
        max-width: 900px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .edit-header {
        background: linear-gradient(135deg, #f59e0b 0%, #f97316 100%);
        color: white;
        padding: 35px 40px;
        border-radius: 15px 15px 0 0;
        box-shadow: 0 4px 15px rgba(245, 158, 11, 0.3);
        position: relative;
        overflow: hidden;
    }

    .edit-header::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 300px;
        height: 300px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
    }

    .edit-header h1 {
        margin: 0;
        font-size: 28px;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 15px;
        position: relative;
        z-index: 1;
    }

    .edit-header h1 i {
        font-size: 32px;
    }

    .edit-body {
        background: white;
        border-radius: 0 0 15px 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        padding: 40px;
    }

    .form-section {
        margin-bottom: 30px;
    }

    .form-section h3 {
        color: #f59e0b;
        font-size: 18px;
        font-weight: 600;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid #e9ecef;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .form-label.required::after {
        content: ' *';
        color: #ef4444;
    }

    .form-control {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid #e9ecef;
        border-radius: 10px;
        font-size: 15px;
        transition: all 0.3s;
        background: white;
    }

    .form-control:focus {
        outline: none;
        border-color: #f59e0b;
        box-shadow: 0 0 0 3px rgba(245, 158, 11, 0.1);
    }

    .alert-modern {
        padding: 18px 25px;
        border-radius: 12px;
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 12px;
        font-weight: 500;
    }

    .alert-error {
        background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
        color: #991b1b;
        border-left: 5px solid #ef4444;
    }

    .alert-error i {
        color: #ef4444;
        font-size: 20px;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        justify-content: center;
        margin-top: 30px;
        padding-top: 25px;
        border-top: 2px solid #e9ecef;
    }

    .btn-action {
        padding: 14px 35px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 15px;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
        border: none;
        cursor: pointer;
    }

    .btn-save {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
        box-shadow: 0 4px 10px rgba(16, 185, 129, 0.2);
    }

    .btn-save:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
        color: white;
    }

    .btn-cancel {
        background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
        color: white;
        box-shadow: 0 4px 10px rgba(107, 114, 128, 0.2);
    }

    .btn-cancel:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(107, 114, 128, 0.4);
        color: white;
    }

    @@media (max-width: 768px) {
        .edit-container {
            margin: 20px auto;
        }

        .edit-header {
            padding: 25px 20px;
        }

        .edit-body {
            padding: 25px;
        }

        .form-grid {
            grid-template-columns: 1fr;
        }

        .action-buttons {
            flex-direction: column;
        }

        .btn-action {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<div class="edit-container">
    <div class="edit-header">
        <h1>
            <i class="fas fa-user-edit"></i>
            Chỉnh sửa thông tin nhân viên
        </h1>
    </div>

    <div class="edit-body">
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert-modern alert-error">
                <i class="fas fa-exclamation-circle"></i>
                <span>@Model.ErrorMessage</span>
            </div>
        }

        @if (Model.Staff != null)
        {
            <form method="post">
                @Html.AntiForgeryToken()

                <div class="form-section">
                    <h3>
                        <i class="fas fa-user"></i>
                        Thông tin cá nhân
                    </h3>
                    <div class="form-grid">
                        <div class="form-group">
                            <label class="form-label required">Họ và tên</label>
                            <input type="text" name="Staff.FullName" class="form-control" 
                                   value="@(Model.Staff.FullName ?? "")" 
                                   placeholder="Nhập họ tên đầy đủ" required />
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <h3>
                        <i class="fas fa-envelope"></i>
                        Thông tin liên hệ
                    </h3>
                    <div class="form-grid">
                        <div class="form-group">
                            <label class="form-label required">Email</label>
                            <input type="email" name="Staff.Email" class="form-control" 
                                   value="@(Model.Staff.Email ?? "")" 
                                   placeholder="example@email.com" required />
                        </div>
                        <div class="form-group">
                            <label class="form-label required">Số điện thoại</label>
                            <input type="tel" name="Staff.Phone" class="form-control" 
                                   value="@(Model.Staff.Phone ?? "")" 
                                   placeholder="0123456789" required />
                        </div>
                    </div>
                </div>

                <input type="hidden" name="Staff.Id" value="@Model.Staff.Id" />

                <div class="action-buttons">
                    <button type="submit" class="btn-action btn-save">
                        <i class="fas fa-save"></i>
                        Lưu thay đổi
                    </button>
                    <a href="/Staff/Details/@Model.Staff.Id" class="btn-action btn-cancel">
                        <i class="fas fa-times"></i>
                        Hủy bỏ
                    </a>
                </div>
            </form>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-user-times" style="font-size: 64px; color: #dee2e6;"></i>
                <h3 style="margin-top: 20px; color: #6c757d;">Không tìm thấy thông tin nhân viên</h3>
                <a href="/Staff/Index" class="btn-action btn-cancel" style="margin-top: 20px;">
                    <i class="fas fa-arrow-left"></i>
                    Quay lại danh sách
                </a>
            </div>
        }
    </div>
</div>
