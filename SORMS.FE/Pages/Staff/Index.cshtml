@page
@model SORMS.FE.Pages.Staff.IndexModel
@{
    ViewData["Title"] = "Quản lý nhân viên";
}

<style>
    .staff-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 30px 20px;
    }

    .page-header {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        color: white;
        padding: 35px 40px;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(17, 153, 142, 0.3);
        margin-bottom: 30px;
        position: relative;
        overflow: hidden;
    }

    .page-header::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 300px;
        height: 300px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
    }

    .page-header h1 {
        margin: 0 0 10px 0;
        font-size: 32px;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 15px;
        position: relative;
        z-index: 1;
    }

    .page-header h1 i {
        font-size: 36px;
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.1); }
    }

    .page-header p {
        margin: 0;
        font-size: 16px;
        opacity: 0.95;
        position: relative;
        z-index: 1;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: white;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        display: flex;
        align-items: center;
        gap: 20px;
        transition: all 0.3s;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
    }

    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 28px;
        color: white;
    }

    .stat-icon.green {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
    }

    .stat-content h3 {
        margin: 0 0 5px 0;
        font-size: 14px;
        color: #6c757d;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .stat-content p {
        margin: 0;
        font-size: 28px;
        font-weight: 700;
        color: #2d3748;
    }

    .actions-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
        gap: 15px;
        flex-wrap: wrap;
    }

    .search-box {
        flex: 1;
        min-width: 250px;
        max-width: 400px;
    }

    .search-box input {
        width: 100%;
        padding: 12px 20px 12px 45px;
        border: 2px solid #e9ecef;
        border-radius: 10px;
        font-size: 15px;
        transition: all 0.3s;
    }

    .search-box input:focus {
        outline: none;
        border-color: #11998e;
        box-shadow: 0 0 0 3px rgba(17, 153, 142, 0.1);
    }

    .search-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #6c757d;
    }

    .btn-create {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        color: white;
        padding: 12px 28px;
        border-radius: 10px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        transition: all 0.3s;
        box-shadow: 0 4px 10px rgba(17, 153, 142, 0.2);
        border: none;
    }

    .btn-create:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(17, 153, 142, 0.4);
        color: white;
    }

    .staff-table {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .staff-table table {
        width: 100%;
        border-collapse: collapse;
    }

    .staff-table thead {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }

    .staff-table th {
        padding: 18px 20px;
        text-align: left;
        font-weight: 700;
        color: #2d3748;
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        border-bottom: 2px solid #dee2e6;
    }

    .staff-table td {
        padding: 18px 20px;
        color: #4a5568;
        font-size: 15px;
        border-bottom: 1px solid #f1f3f5;
    }

    .staff-table tbody tr {
        transition: all 0.2s;
    }

    .staff-table tbody tr:hover {
        background-color: #f8f9fa;
    }

    .action-buttons {
        display: flex;
        gap: 8px;
    }

    .btn-action {
        padding: 8px 16px;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 500;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        transition: all 0.2s;
        border: none;
        cursor: pointer;
    }

    .btn-view {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .btn-view:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
        color: white;
    }

    .btn-edit {
        background: linear-gradient(135deg, #f59e0b 0%, #f97316 100%);
        color: white;
    }

    .btn-edit:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(245, 158, 11, 0.3);
        color: white;
    }

    .btn-delete {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        color: white;
    }

    .btn-delete:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
        color: white;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #6c757d;
    }

    .empty-state i {
        font-size: 64px;
        color: #dee2e6;
        margin-bottom: 20px;
    }

    .empty-state h3 {
        font-size: 24px;
        margin-bottom: 10px;
        color: #4a5568;
    }

    .empty-state p {
        font-size: 16px;
        margin-bottom: 25px;
    }

    .alert-modern {
        padding: 18px 25px;
        border-radius: 12px;
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 12px;
        font-weight: 500;
    }

    .alert-error {
        background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
        color: #991b1b;
        border-left: 5px solid #ef4444;
    }

    .alert-success {
        background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
        color: #065f46;
        border-left: 5px solid #10b981;
    }

    @@media (max-width: 768px) {
        .staff-container {
            padding: 20px 15px;
        }

        .page-header {
            padding: 25px 20px;
        }

        .page-header h1 {
            font-size: 24px;
        }

        .stats-grid {
            grid-template-columns: 1fr;
        }

        .actions-bar {
            flex-direction: column;
            align-items: stretch;
        }

        .search-box {
            max-width: 100%;
        }

        .staff-table {
            overflow-x: auto;
        }

        .staff-table table {
            min-width: 600px;
        }
    }
</style>

<div class="staff-container">
    <div class="page-header">
        <h1>
            <i class="fas fa-user-tie"></i>
            Quản lý nhân viên
        </h1>
        <p>Quản lý thông tin và hoạt động của nhân viên hệ thống</p>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert-modern alert-success">
            <i class="fas fa-check-circle"></i>
            <span>@TempData["SuccessMessage"]</span>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert-modern alert-error">
            <i class="fas fa-exclamation-circle"></i>
            <span>@Model.ErrorMessage</span>
        </div>
    }

    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon green">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-content">
                <h3>Tổng nhân viên</h3>
                <p>@Model.TotalStaff</p>
            </div>
        </div>
    </div>

    <div class="actions-bar">
        <div class="search-box" style="position: relative;">
            <i class="fas fa-search search-icon"></i>
            <input type="text" id="searchInput" placeholder="Tìm kiếm nhân viên..." onkeyup="searchStaff()">
        </div>
        <div style="display: flex; gap: 15px;">
            <a href="/Admin/Dashboard" class="btn-create" style="background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);">
                <i class="fas fa-arrow-left"></i>
                Quay lại
            </a>
            <a href="/Staff/Create" class="btn-create">
                <i class="fas fa-plus"></i>
                Thêm nhân viên mới
            </a>
        </div>
    </div>

    <div class="staff-table">
        @if (Model.StaffList.Any())
        {
            <table id="staffTable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Họ và tên</th>
                        <th>Email</th>
                        <th>Số điện thoại</th>
                        <th style="text-align: center;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var staff in Model.StaffList)
                    {
                        <tr>
                            <td><strong>#@staff.Id</strong></td>
                            <td>@staff.FullName</td>
                            <td>@staff.Email</td>
                            <td>@(staff.Phone ?? "N/A")</td>
                            <td style="text-align: center;">
                                <div class="action-buttons">
                                    <a href="/Staff/Details/@staff.Id" class="btn-action btn-view">
                                        <i class="fas fa-eye"></i>
                                        Chi tiết
                                    </a>
                                    <a href="/Staff/Edit/@staff.Id" class="btn-action btn-edit">
                                        <i class="fas fa-edit"></i>
                                        Sửa
                                    </a>
                                    <a href="/Staff/Delete/@staff.Id" class="btn-action btn-delete">
                                        <i class="fas fa-trash"></i>
                                        Xóa
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-user-tie"></i>
                <h3>Chưa có nhân viên nào</h3>
                <p>Bắt đầu bằng cách thêm nhân viên mới vào hệ thống</p>
                <a href="/Staff/Create" class="btn-create">
                    <i class="fas fa-plus"></i>
                    Thêm nhân viên mới
                </a>
            </div>
        }
    </div>
</div>

<script>
    function searchStaff() {
        const input = document.getElementById('searchInput');
        const filter = input.value.toLowerCase();
        const table = document.getElementById('staffTable');
        const rows = table.getElementsByTagName('tr');

        for (let i = 1; i < rows.length; i++) {
            const cells = rows[i].getElementsByTagName('td');
            let found = false;

            for (let j = 0; j < cells.length - 1; j++) {
                const cellText = cells[j].textContent || cells[j].innerText;
                if (cellText.toLowerCase().indexOf(filter) > -1) {
                    found = true;
                    break;
                }
            }

            rows[i].style.display = found ? '' : 'none';
        }
    }
</script>
