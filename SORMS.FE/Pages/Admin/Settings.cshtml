@page
@model SORMS.FE.Pages.Admin.SettingsModel
@{
    ViewData["Title"] = "Cài đặt";
}

<style>
    .settings-container {
        max-width: 1000px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .settings-header {
        background: linear-gradient(135deg, #ee5a6f 0%, #f29263 100%);
        color: white;
        padding: 35px 40px;
        border-radius: 15px 15px 0 0;
        box-shadow: 0 4px 15px rgba(238, 90, 111, 0.3);
        position: relative;
        overflow: hidden;
    }

    .settings-header::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 300px;
        height: 300px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
    }

    .settings-header::after {
        content: '';
        position: absolute;
        bottom: -30%;
        left: -5%;
        width: 200px;
        height: 200px;
        background: rgba(255, 255, 255, 0.08);
        border-radius: 50%;
    }

    .settings-header h1 {
        margin: 0;
        font-size: 32px;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 15px;
        position: relative;
        z-index: 1;
    }

    .settings-header h1 i {
        font-size: 36px;
        animation: rotate 3s linear infinite;
    }

    @@keyframes rotate {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    .settings-body {
        background: white;
        border-radius: 0 0 15px 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .form-section {
        margin-bottom: 35px;
        padding: 30px;
        background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
        border-radius: 12px;
        border-left: 5px solid #ee5a6f;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        transition: all 0.3s ease;
    }

    .form-section:hover {
        box-shadow: 0 4px 12px rgba(238, 90, 111, 0.15);
        transform: translateY(-2px);
    }

    .form-section h3 {
        color: #ee5a6f;
        font-size: 20px;
        font-weight: 600;
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 12px;
        padding-bottom: 15px;
        border-bottom: 2px solid #e9ecef;
    }

    .form-section h3 i {
        font-size: 22px;
    }

    .form-group-modern {
        margin-bottom: 25px;
        position: relative;
    }

    .form-label-modern {
        display: block;
        font-weight: 600;
        color: #495057;
        margin-bottom: 10px;
        font-size: 14px;
        letter-spacing: 0.3px;
    }

    .form-control-modern {
        width: 100%;
        padding: 14px 18px;
        border: 2px solid #e9ecef;
        border-radius: 10px;
        font-size: 15px;
        transition: all 0.3s ease;
        background: white;
    }

    .form-control-modern:hover {
        border-color: #cbd5e0;
    }

    .form-control-modern:focus {
        outline: none;
        border-color: #ee5a6f;
        box-shadow: 0 0 0 4px rgba(238, 90, 111, 0.1);
        background: #fff5f7;
    }

    .btn-save {
        background: linear-gradient(135deg, #ee5a6f 0%, #f29263 100%);
        color: white;
        border: none;
        padding: 14px 35px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 15px;
        cursor: pointer;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        box-shadow: 0 4px 10px rgba(238, 90, 111, 0.2);
    }

    .btn-save:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(238, 90, 111, 0.4);
    }

    .btn-save:active {
        transform: translateY(-1px);
        box-shadow: 0 3px 10px rgba(238, 90, 111, 0.3);
    }

    .btn-save i {
        font-size: 16px;
    }

    .alert-modern {
        padding: 18px 25px;
        border-radius: 12px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 12px;
        font-weight: 500;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        animation: slideDown 0.4s ease;
    }

    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .alert-success {
        background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%);
        color: #155724;
        border-left: 5px solid #28a745;
    }

    .alert-success i {
        color: #28a745;
        font-size: 20px;
    }

    .alert-error {
        background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%);
        color: #721c24;
        border-left: 5px solid #dc3545;
    }

    .alert-error i {
        color: #dc3545;
        font-size: 20px;
    }

    .text-danger {
        color: #dc3545;
        font-size: 13px;
        margin-top: 5px;
        display: block;
    }

    textarea.form-control-modern {
        resize: vertical;
        min-height: 120px;
        font-family: inherit;
        line-height: 1.6;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .settings-container {
            margin: 20px auto;
            padding: 0 10px;
        }

        .settings-header {
            padding: 25px 20px;
        }

        .settings-header h1 {
            font-size: 24px;
        }

        .form-section {
            padding: 20px;
        }

        .btn-save {
            width: 100%;
            justify-content: center;
        }
    }

    /* Smooth transitions */
    * {
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }

        

    .form-group-modern {
        margin-bottom: 20px;
    }

    .form-label-modern {
        display: block;
        font-weight: 600;
        color: #495057;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .form-control-modern {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e9ecef;
        border-radius: 8px;
        font-size: 15px;
        transition: all 0.3s;
    }

    .form-control-modern:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .btn-save {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }

    .btn-save:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
    }

    .alert-modern {
        padding: 15px 20px;
        border-radius: 10px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .alert-success {
        background: #d4edda;
        color: #155724;
        border-left: 4px solid #28a745;
    }

    .alert-error {
        background: #f8d7da;
        color: #721c24;
        border-left: 4px solid #dc3545;
    }

    .text-danger {
        color: #dc3545;
        font-size: 13px;
        margin-top: 5px;
        display: block;
    }
</style>

<div class="settings-container">
    <div class="settings-header">
        <h1>
            <i class="fas fa-user-cog"></i>
            Cài đặt tài khoản
        </h1>
    </div>

    <div class="settings-body">
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert-modern alert-success">
                <i class="fas fa-check-circle"></i>
                <span>@Model.SuccessMessage</span>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert-modern alert-error">
                <i class="fas fa-exclamation-circle"></i>
                <span>@Model.ErrorMessage</span>
            </div>
        }

        <!-- Change Password -->
        <div class="form-section">
            <h3>
                <i class="fas fa-key"></i>
                Đổi mật khẩu
            </h3>
            <form method="post" action="/Admin/Settings?handler=ChangePassword">
                @Html.AntiForgeryToken()
                <div class="form-group-modern">
                    <label class="form-label-modern">Mật khẩu hiện tại *</label>
                    <input name="CurrentPassword" type="password" class="form-control-modern" placeholder="Nhập mật khẩu hiện tại" required />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group-modern">
                    <label class="form-label-modern">Mật khẩu mới *</label>
                    <input name="NewPassword" type="password" class="form-control-modern" placeholder="Nhập mật khẩu mới (tối thiểu 6 ký tự)" required minlength="6" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group-modern">
                    <label class="form-label-modern">Xác nhận mật khẩu mới *</label>
                    <input name="ConfirmPassword" type="password" class="form-control-modern" placeholder="Nhập lại mật khẩu mới" required />
                    <span class="text-danger"></span>
                </div>
                <button type="submit" class="btn-save">
                    <i class="fas fa-save"></i>
                    Đổi mật khẩu
                </button>
            </form>
        </div>

        <!-- Update Email -->
        <div class="form-section">
            <h3>
                <i class="fas fa-envelope"></i>
                Cập nhật Email
            </h3>
            <form method="post" action="/Admin/Settings?handler=UpdateEmail">
                @Html.AntiForgeryToken()
                <div class="form-group-modern">
                    <label class="form-label-modern">Email mới *</label>
                    <input name="Email" type="email" class="form-control-modern" placeholder="admin@example.com" value="@(Model.Email ?? "")" required />
                    <span class="text-danger"></span>
                </div>
                <button type="submit" class="btn-save">
                    <i class="fas fa-save"></i>
                    Cập nhật Email
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
