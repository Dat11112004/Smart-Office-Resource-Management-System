@page
@model SORMS.FE.Pages.Admin.NotificationHistoryModel
@{
    ViewData["Title"] = "Lịch Sử Thông Báo";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style>
    .history-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .page-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
        border-radius: 15px;
        margin-bottom: 2rem;
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
    }

        .page-header h2 {
            margin: 0;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 12px;
        }

            .page-header h2 i {
                font-size: 2rem;
            }

        .page-header p {
            margin: 0.5rem 0 0 0;
            opacity: 0.9;
        }

    .action-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .btn-back {
        background: #6c757d;
        color: white;
        border: none;
        border-radius: 10px;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
    }

        .btn-back:hover {
            background: #5a6268;
            color: white;
            transform: translateY(-2px);
        }

    .notification-card {
        background: white;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        border-left: 4px solid transparent;
    }

        .notification-card:hover {
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.12);
            transform: translateY(-2px);
        }

        .notification-card.broadcast {
            border-left-color: #f093fb;
        }

        .notification-card.individual {
            border-left-color: #4facfe;
        }

    .notification-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

    .notification-type {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.875rem;
        font-weight: 600;
    }

        .notification-type.broadcast {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
        }

        .notification-type.individual {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            color: white;
        }

    .target-badge {
        padding: 0.25rem 0.75rem;
        border-radius: 15px;
        font-size: 0.75rem;
        font-weight: 600;
        background: #e9ecef;
        color: #495057;
    }

        .target-badge.all {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .target-badge.resident {
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            color: white;
        }

        .target-badge.staff {
            background: linear-gradient(135deg, #ff6b6b 0%, #feca57 100%);
            color: white;
        }

    .notification-message {
        color: #2c3e50;
        line-height: 1.6;
        margin-bottom: 1rem;
        padding: 1rem;
        background: #f8f9fa;
        border-radius: 8px;
        white-space: pre-wrap;
    }

    .notification-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.875rem;
        color: #6c757d;
        padding-top: 1rem;
        border-top: 1px solid #e9ecef;
    }

        .notification-meta .time {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

    .stats-bar {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .stat-card {
        background: white;
        padding: 1.5rem;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        display: flex;
        align-items: center;
        gap: 1rem;
    }

        .stat-card i {
            font-size: 2.5rem;
            color: #667eea;
        }

        .stat-card .stat-info h3 {
            margin: 0;
            font-size: 2rem;
            font-weight: 700;
            color: #2c3e50;
        }

        .stat-card .stat-info p {
            margin: 0;
            font-size: 0.875rem;
            color: #6c757d;
        }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: white;
        border-radius: 15px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }

        .empty-state i {
            font-size: 5rem;
            color: #dfe6e9;
            margin-bottom: 1.5rem;
        }

        .empty-state h4 {
            color: #2c3e50;
            margin-bottom: 0.5rem;
        }

        .empty-state p {
            color: #95a5a6;
        }

    .alert-danger {
        background: linear-gradient(135deg, #eb3349 0%, #f45c43 100%);
        color: white;
        border: none;
        border-radius: 12px;
        padding: 1rem 1.5rem;
        margin-bottom: 1.5rem;
    }

    @@media (max-width: 768px) {
        .notification-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.5rem;
        }

        .notification-meta {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.5rem;
        }
    }
</style>

<div class="history-container">
    <div class="page-header">
        <h2>
            <i class="fas fa-history"></i>
            Lịch Sử Thông Báo
        </h2>
        <p>Xem tất cả thông báo đã gửi trong hệ thống</p>
    </div>

    <div class="action-bar">
        <a href="/Admin/CreateNotification" class="btn-back">
            <i class="fas fa-plus-circle"></i>
            Tạo Thông Báo Mới
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @Model.ErrorMessage
        </div>
    }

    @if (Model.Notifications.Any())
    {
        <div class="stats-bar">
            <div class="stat-card">
                <i class="fas fa-paper-plane"></i>
                <div class="stat-info">
                    <h3>@Model.Notifications.Count</h3>
                    <p>Tổng thông báo</p>
                </div>
            </div>
            <div class="stat-card">
                <i class="fas fa-bullhorn"></i>
                <div class="stat-info">
                    <h3>@Model.Notifications.Count(n => n.Type == "Broadcast")</h3>
                    <p>Broadcast</p>
                </div>
            </div>
            <div class="stat-card">
                <i class="fas fa-envelope"></i>
                <div class="stat-info">
                    <h3>@Model.Notifications.Count(n => n.Type == "Individual")</h3>
                    <p>Cá nhân</p>
                </div>
            </div>
        </div>

        @foreach (var notification in Model.Notifications)
        {
            <div class="notification-card @notification.Type.ToLower()">
                <div class="notification-header">
                    <div>
                        <span class="notification-type @notification.Type.ToLower()">
                            <i class="fas @(notification.Type == "Broadcast" ? "fa-bullhorn" : "fa-envelope")"></i>
                            @(notification.Type == "Broadcast" ? "Thông báo Broadcast" : "Thông báo Cá nhân")
                        </span>
                        @if (notification.Type == "Broadcast" && !string.IsNullOrEmpty(notification.TargetRole))
                        {
                            <span class="target-badge @notification.TargetRole.ToLower()">
                                @(notification.TargetRole == "All" ? "Tất cả" : notification.TargetRole == "Resident" ? "Cư dân" : "Nhân viên")
                            </span>
                        }
                        @if (notification.Type == "Individual")
                        {
                            <span class="target-badge">
                                @if (notification.ResidentId.HasValue)
                                {
                                    <text>Resident ID: @notification.ResidentId</text>
                                }
                                @if (notification.StaffId.HasValue)
                                {
                                    <text>Staff ID: @notification.StaffId</text>
                                }
                            </span>
                        }
                    </div>
                </div>

                <div class="notification-message">
                    @notification.Message
                </div>

                <div class="notification-meta">
                    <div class="time">
                        <i class="far fa-clock"></i>
                        <span>@notification.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm:ss")</span>
                    </div>
                    <div>
                        <span class="badge @(notification.IsRead ? "bg-success" : "bg-secondary")">
                            @(notification.IsRead ? "Đã đọc" : "Chưa đọc")
                        </span>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="empty-state">
            <i class="far fa-bell-slash"></i>
            <h4>Chưa có thông báo nào</h4>
            <p>Chưa có thông báo nào được gửi trong hệ thống.</p>
        </div>
    }
</div>
