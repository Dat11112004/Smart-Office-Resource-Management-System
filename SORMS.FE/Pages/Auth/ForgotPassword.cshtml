@page
@model SORMS.FE.Pages.Auth.ForgotPasswordModel
@{
    ViewData["Title"] = "Quên mật khẩu";
}

<h2>Quên mật khẩu</h2>

<form method="post">
    <div>
        <label>Email:</label>
        <input asp-for="ForgotPasswordDto.Email" type="email" />
        <span asp-validation-for="ForgotPasswordDto.Email" class="text-danger"></span>
    </div>
    <button type="submit">Gửi email khôi phục</button>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p>@Model.Message</p>
}
