@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="width: 400px;">
        <h4 class="text-center mb-4">Quên mật khẩu</h4>

        <form id="forgotForm">
            <div class="mb-3">
                <label>Nhập Email</label>
                <input type="email" id="email" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-warning w-100">Gửi OTP</button>
        </form>

        <div class="text-center mt-3">
            <a href="/Auth/Login">Quay lại đăng nhập</a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById("forgotForm").addEventListener("submit", async (e) => {
            e.preventDefault();
            const res = await fetch("/api/Auth/forgot-password", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ email: email.value })
            });
            const msg = await res.text();
            if (res.ok) {
                alert("OTP đã gửi, kiểm tra email!");
                window.location.href = "/Auth/VerifyOtp?email=" + email.value;
            } else alert(msg);
        });
    </script>
}
